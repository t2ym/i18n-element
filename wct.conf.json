{
  "plugins": {
    "local": {
      "disabled": true,
      "browsers": [
        "chrome", "firefox"
      ]
    },
    "headless": {
      "disabled": false,
      "browsers": [
        "chrome",
        "firefox"
      ],
      "browsersOptions": {
        "chrome": [
          "window-size=1920,1080",
          "headless",
          "disable-gpu"
        ],
        "firefox": [
          "--headless"
        ]
      }
    },
    "sauce": {
      "disabled": false,
      "browsers": [
        {
          "browserName":  "microsoftedge",
          "platform":     "Windows 10",
          "version":      "16"
        },
        {
          "browserName":  "microsoftedge",
          "platform":     "Windows 10",
          "version":      "15"
        },
        {
          "browserName":  "safari",
          "platform":     "OS X 10.13",
          "version":      "11"
        },
        {
          "browserName":  "safari",
          "platform":     "OS X 10.12",
          "version":      "10"
        },
        {
          "browserName":  "internet explorer",
          "platform":     "Windows 8.1",
          "version":      "11"
        }
      ]
    },
    "istanbul": {
      "dir": "test/coverage-report",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/i18n-element.html",
        "**/i18n-dom-bind.html",
        "**/define-element.html",
        "**/mixin-behavior.html"
      ],
      "exclude": [
        "/bower_components/**/*",
        "/test/**/*"
      ]
    }
  }
}

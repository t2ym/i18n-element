      "browsers": [
        {
          "browserName":  "microsoftedge",
          "platform":     "Windows 10",
          "version":      "15"
        },
        {
          "browserName":  "microsoftedge",
          "platform":     "Windows 10",
          "version":      "14"
        },
        {
          "browserName":  "safari",
          "platform":     "OS X 10.12",
